/* pages/search/search.wxss */
page{
  background: #fafaf8;
}
.search{
  width: 100%;
  height: 75px;
  background: rgb(244,96,56);
  display: flex;
  justify-content: center;
  align-items: center;
}
.search_view{
  display: flex;
  align-items: center;
  justify-content: space-around;
  width: 70%;
  height: 40px;
  /* border: 1px solid  #ff0; */
  border-radius: 20px; 
  background: #e04c28;
}
.search input{
  width: 82%;
  height: 38px;
  /* border: 1px solid  #ccc; */
}

.search  text{
  color: #fff;
  margin-left: 8rpx;
}


/* 热门搜索 */
.hotsearch{
  padding: 10px 10px;
}
.hot:nth-child(-n+2),.hist:nth-child(-n+3){
  color: #d53c15;
}
.hot,.hist{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.hotsearch_list{
  margin-top: 10px;
}
.list,.hotsearch_list view{
  width: 32.5%;
  height: 48px;
  /* border: 1px solid red; */
  background: #fff;
  float: left;
  text-align: center;
  line-height: 48px;
  margin: 1px;
  color: #999;
  font-size: 15px;
}


/* 近期搜索 */
.jqsearch{
  clear: both;
  padding: 10px 10px;
  margin-top: 10px;
  font-size: 14px;
}

.jqsearch_title{
  display: flex;
  justify-content: space-between;
}

.clearbtn{
  display: inline-block;
  border-radius: 10px;
  padding: 2px 6px;
  font-size: 12px;
  color: red;
  background-color: rgba(184, 159, 159, 0.604);
}

.clearbtn:hover{
  opacity: .6;
}

.jqsearch_list{
  margin-top: 10px;
}
.jqsearch_list view{
  width: 32.5%;
  height: 48px;
  /* border: 1px solid red; */
  background: #fff;
  float: left;
  text-align: center;
  line-height: 48px;
  margin: 1px;
  color: #999;
}